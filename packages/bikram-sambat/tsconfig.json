{
  "extends": "@total-typescript/tsconfig/bundler/no-dom/library-monorepo",
  "compilerOptions": {
    "outDir": "dist",

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Bundler"
  }
}
