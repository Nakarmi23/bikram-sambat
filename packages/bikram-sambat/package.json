{
  "name": "@nakarmi23/bikram-sambat",
  "version": "1.4.6",
  "description": "The Bikram Sambat library is a utility for working with Nepali (Bikram Sambat) Dates, allowing conversion between AD dates and BS dates. It supports robust parsing, formatting, manipulation, and comparison of BS dates, covering years from 1970 BS to 2111 BS.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "license": "MIT",
  "homepage": "https://n23-bikram-sambat.vercel.app",
  "bugs": {
    "email": "ankit.nakarmi23@gmail.com",
    "url": "https://github.com/Nakarmi23/bikram-sambat/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nakarmi23/bikram-sambat.git"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "docs:gen": "typedoc src/index.ts",
    "build": "tsup",
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tsc"
  },
  "keywords": [
    "bikram-sambat",
    "nepali-date",
    "english-nepali-date-converter",
    "date"
  ],
  "author": "Ankit Nakarmi <ankit.nakarmi23@gmail.com>",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "terser": "^5.31.1",
    "ts-jest": "^29.1.5",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  },
  "private": false,
  "dependencies": {
    "dayjs": "^1.11.11"
  }
}
